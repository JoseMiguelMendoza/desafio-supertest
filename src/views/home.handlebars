<div class="navbar">
    <div style="display: flex; align-items: center; gap: 10px;">
        <img style="margin-left: 5px; height: 45px;" src="/assets/icono-perfil.png" alt="Imagen de perfil">
        <p style="color: white; font-family:'Kalam', cursive;">¡Bienvenido/a {{role}}, {{name}}!</p>
    </div>
    <div style="display: flex; align-items: center; gap: 10px;">
        <a href="/" style="text-decoration: none; font-family: 'Kalam', cursive; margin-right: 10px; color: white; font-weight: bold;">UPDATE</a>
        <div style="border-left: 1px solid white; color: #003500">--</div>
        {{#if checkingRole}}
            <a href="/realTimeProducts" style="text-decoration: none; font-family: 'Kalam', cursive; margin-right: 10px; color: white; font-weight: bold;">POST/DELETE</a>
        {{/if}}
        <div style="border-left: 1px solid white; color: #003500">--</div>
        <a href="/logout" style="text-decoration: none; font-family: 'Kalam', cursive; margin-right: 15px; color: white; font-weight: bold;">Logout</a>
    </div>
</div>
<h1 class="mainTitle">Productos agregados hasta el momento</h1>
<div style="display: flex; justify-content: space-evenly;">
    <form class="formUpdateContainer">
        <h3 class="tituloForm">Ingrese ID del producto a actualizar</h3>
        <label class="formLabel" for="id">ID: <input type="text" name="id" id="id"></label>
        <label class="formLabel" for="title">Título: <input type="text" name="title" id="title"></label>
        <label class="formLabel" for="description">Descripción: <input type="text" name="description" id="description"></label>
        <label class="formLabel" for="price">Precio: <input type="text" name="price" id="price"></label>
        <label class="formLabel" for="code">Código: <input type="text" name="code" id="code"></label>
        <label class="formLabel" for="stock">Stock: <input type="text" name="stock" id="stock"></label>
        <label class="formLabel" for="category">Categoría: <input type="text" name="category" id="category"></label>
        <button class="buttonUpdateForm" id="updateProduct">Actualizar Producto</button>
    </form>
    <div class="generalUpdateContainer">       
        {{#each products}}
        <div class="containerProductWithId">
            <div class="containerProductInfo">
                <h1>{{this.title}}</h1>
                <p class="estiloTexto"><b>Descripción:</b> {{this.description}}</p>
                <p class="estiloTexto"><b>Código:</b> {{this.code}}</p>
                <p class="estiloTexto"><b>Stock:</b> {{this.stock}}</p>
                <p class="estiloTexto"><b>Precio:</b> {{this.price}}</p>
                <p class="estiloTexto"><b>Categoria:</b> {{this.category}}</p>
                <p class="estiloTexto"><b>ID:</b> {{this._id}}</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<div class="buttonsContainer">
    {{#if paginateInfo.hasPrevPage}}
    <div class="boxA">
        <a href="{{paginateInfo.prevLink}}">Anterior</a>
    </div>
    {{/if}}
    {{#if paginateInfo.hasNextPage}}
    <div class="boxA">
        <a href="{{paginateInfo.nextLink}}">Siguiente</a>
    </div>   
    {{/if}}
</div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/update.js"></script>